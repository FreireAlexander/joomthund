<?xml version="1.0" encoding="UTF-8"?>
<form>
        <field type="note" name="note_basics" label="JOOMTHUND_BASIC_SETTINGS" class="alert alert-info col-12 m-3 text-center"  />
				
		<field
					name="width"
					type="text"
					default="300px"
					label="MOD_JOOMTHUND_CARDS_CARD_WIDTH"
					hint="JOOMTHUND_CSS_UNITS_DESC"
					description="JOOMTHUND_CSS_UNITS_DESC"
				
				/>
				
				<field
					name="padding_top"
					type="text"
					default="10px"
					label="JOOMTHUND_PADDING_TOP"
					hint="JOOMTHUND_CSS_UNITS_DESC"
					description="JOOMTHUND_CSS_UNITS_DESC"
				
				/>
				<field
					name="padding_bottom"
					type="text"
					default="10px"
					label="JOOMTHUND_PADDING_BOTTOM"
					hint="JOOMTHUND_CSS_UNITS_DESC"
					description="JOOMTHUND_CSS_UNITS_DESC"
				
				/>
				<field
					name="padding_left"
					type="text"
					default="10px"
					label="JOOMTHUND_PADDING_LEFT"
					hint="JOOMTHUND_CSS_UNITS_DESC"
					description="JOOMTHUND_CSS_UNITS_DESC"
				
				/>
				
				<field
					name="padding_right"
					type="text"
					default="10px"
					label="JOOMTHUND_PADDING_RIGHT"
					hint="JOOMTHUND_CSS_UNITS_DESC"
					description="JOOMTHUND_CSS_UNITS_DESC"
				
				/>
				
				<field
					name="border_width"
					type="text"
					default="1px"
					label="JOOMTHUND_BORDER_WIDTH"
					hint="JOOMTHUND_CSS_UNITS_DESC"
					description="JOOMTHUND_CSS_UNITS_DESC"
				
				/>
				<field
				    name="border_style"
					type="list"
					default="solid"
					label="JOOMTHUND_BORDER_STYLE"

				    >
				    <option value="solid">solid</option>
				    <option value="dashed">dashed</option>
				    <option value="dotted">dotted</option>
				    <option value="double">double</option>
				    <option value="groove">groove</option>
				    <option value="inset">inset</option>
				    <option value="outset">outset</option>
				    <option value="ridge">ridge</option>
				</field>
				
				<field
					name="border_radius"
					type="text"
					default="20px"
					label="JOOMTHUND_BORDER_RADIUS"
					hint="JOOMTHUND_CSS_UNITS_DESC"
					description="JOOMTHUND_CSS_UNITS_DESC"
				
				/>
				
				<field
					name="border_color"
					type="colorpicker"
					default="silver"
					label="JOOMTHUND_BORDER_COLOR"
					class="inputbox"
				
				/>
				
				<field
					name="border_color__hover"
					type="colorpicker"
					default="cadetblue"
					label="JOOMTHUND_BORDER_COLOR__HOVER"
					class="inputbox"
				
				/>
				
				
				<field
					name="background_color"
					type="colorpicker"
					default="darkslategray"
					label="JOOMTHUND_BACKGROUND_COLOR"
					class="inputbox"
				
				/>
				<field
					name="background_color__hover"
					type="colorpicker"
					default="snow"
					label="JOOMTHUND_BACKGROUND_COLOR__HOVER"
					class="inputbox"
				
				/>

</form>